{
  "name": "2024-12-orleans-cda-project3-template",
  "type": "module",
  "version": "1.0.0",
  "description": "",
  "workspaces": [
    "packages/frontend/web",
    "packages/frontend/mobile",
    "packages/backend/shared",
    "packages/backend/api",
    "packages/backend/migrations",
    "packages/shared"
  ],
  "scripts": {
    "dev": "npm run ip:detect && concurrently -c auto --hide 0 \"npm:watch:*\" \"npm:dev:*(!mobile)\"",
    "dev:backend:api": "npm -w packages/backend/api run dev",
    "dev:frontend:web": "npm -w packages/frontend/web run dev",
    "dev:frontend:mobile": "npm -w packages/frontend/mobile run dev",
    "build": "concurrently -c auto \"npm:build:*\"",
    "build:backend:api": "npm -w packages/backend/api run build",
    "build:frontend:web": "npm -w packages/frontend/web run build",
    "lint": "eslint . --fix --report-unused-disable-directives",
    "lint:check": "eslint . --report-unused-disable-directives",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "dc:up": "docker compose -f ./deployment/docker-compose.yml up -d",
    "dc:down": "docker compose -f ./deployment/docker-compose.yml down",
    "test": "vitest",
    "migrations:generate": "npm -w packages/backend/migrations run migrations:generate",
    "migrations:generate:sql": "npm -w packages/backend/migrations run migrations:generate:sql",
    "migrations:latest": "npm -w packages/backend/migrations run migrations:latest",
    "migrations:up": "npm -w packages/backend/migrations run migrations:up",
    "migrations:down": "npm -w packages/backend/migrations run migrations:down",
    "watch:env": "nodemon --watch ./.env --watch ./.env.local --exec \"npm run env:copy\"",
    "env:copy": "concurrently -c auto \"npm:env:copy:*\"",
    "env:copy:backend:api": "cp .env packages/backend/api && cp .env.local packages/backend/api",
    "env:copy:backend:migrations": "cp .env packages/backend/migrations && cp .env.local packages/backend/migrations",
    "env:copy:backend:shared": "cp .env packages/backend/shared && cp .env.local packages/backend/migrations",
    "env:copy:frontend:mobile": "cp .env packages/frontend/mobile && cp .env.local packages/frontend/mobile",
    "env:copy:frontend:web": "cp .env packages/frontend/web && cp .env.local packages/frontend/web",
    "env:copy:shared": "cp .env packages/shared && cp .env.local packages/shared",
    "env:copy:deployment": "cp .env deployment",
    "db:codegen": "kysely-codegen --url \"env(DB_URL)\" --out-file ./packages/shared/src/types/database.ts",
    "branch:check": "tsx ./.tools/check-branch.ts",
    "pre:commit": "npm run pre:commit:branch && lint-staged",
    "pre:commit:lint": "npm run lint:check",
    "pre:commit:format": "npm run format:check",
    "pre:commit:branch": "npm run branch:check",
    "ip:detect": "tsx ./.tools/auto-detect-ip.ts",
    "prepare": "husky && npm run ip:detect && npm run env:copy && npm run db:codegen"
  },
  "author": "moi",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/bcrypt": "^5.0.2",
    "@types/node": "^22.13.10",
    "@types/supertest": "^6.0.3",
    "bcrypt": "^5.1.1",
    "concurrently": "^9.1.2",
    "dotenv": "^16.4.7",
    "eslint": "^9.22.0",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "eslint-plugin-unicorn": "^57.0.0",
    "eslint-plugin-workspaces": "^0.10.1",
    "husky": "^9.1.7",
    "kysely-codegen": "^0.18.3",
    "lint-staged": "^15.5.0",
    "nodemon": "^3.1.9",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "supertest": "^7.1.0",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.26.1",
    "vitest": "^3.0.9"
  },
  "lint-staged": {
    "*.ts*": [
      "eslint --fix --report-unused-disable-directives",
      "prettier --write"
    ]
  }
}
